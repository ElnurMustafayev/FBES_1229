<UserControl x:Class="MvvmApp.Views.SecondWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Green">
    <StackPanel>
        <Button FontSize="34" Content="Main" Command="{Binding NavigationCommand}"/>

        <TextBox Text="{Binding Message}"/>
        <Button Command="{Binding SendMessageCommand}" Content="Send"/>
    </StackPanel>
</UserControl>
