<Window x:Class="ClientApp.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.Views"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="280" Width="300">
    <StackPanel>
        <Label Content="Mail: "/>
        <TextBox x:Name="MailTextbox"/>

        <Label Content="Gender: "/>
        <ComboBox x:Name="GenderCombobox">
            <ComboBoxItem IsSelected="True" Content="Male"/>
            <ComboBoxItem Content="Female"/>
        </ComboBox>

        <Label Content="Password: "/>
        <TextBox x:Name="PasswordTextbox"/>

        <Button Content="Register" Click="Registration_Click"/>
    </StackPanel>
</Window>
